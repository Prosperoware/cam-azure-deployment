	"item": [
		{
			"name": "Get Auth Token",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Set Auth Token\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.environment.set(\"auth-token\", jsonData.data);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"tenantId\" : \"{{tenant-id}}\",\n    \"secretKey\" : \"{{tenant-secret}}\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{azure-host-url}}/api/v1/dms/content-sync/auth/token",
					"host": [
						"{{azure-host-url}}"
					],
					"path": [
						"api",
						"v1",
						"dms",
						"content-sync",
						"auth",
						"token"
					]
				}
			},
			"response": []
		},
